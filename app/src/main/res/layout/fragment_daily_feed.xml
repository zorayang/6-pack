<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_daily_pullup"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/daily_pullup"/>

            <TextView
                android:id="@+id/tvActivityCaption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@color/colorHotPink"
                android:text="Challenge, self-challenge or both"
                android:layout_below="@+id/iv_daily_pullup"/>

            <TextView
                android:id="@+id/tvActivityName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Challenge of the day: Pull Up 10*3"
                android:background="@color/colorLightGrey"
                android:alpha="0.8"
                android:textColor="@color/colorWhite"
                android:layout_above="@+id/tvActivityCaption2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_daily_pushup"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/daily_pushup"/>

            <TextView
                android:id="@+id/tvActivityCaption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@color/colorHotPink"
                android:text="Challenge, self-challenge or both"
                android:layout_below="@+id/iv_daily_pushup"/>

            <TextView
                android:id="@+id/tvActivityName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Challenge of the day: Push Up 15*3"
                android:background="@color/colorLightGrey"
                android:alpha="0.8"
                android:textColor="@color/colorWhite"
                android:layout_above="@+id/tvActivityCaption1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_daily_sideplank"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/daily_sideplank"/>

            <TextView
                android:id="@+id/tvActivityCaption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="@color/colorHotPink"
                android:text="Challenge, self-challenge or both"
                android:layout_below="@+id/iv_daily_sideplank"/>

            <TextView
                android:id="@+id/tvActivityName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Challenge of the day: Pull Up 60s"
                android:background="@color/colorLightGrey"
                android:alpha="0.8"
                android:textColor="@color/colorWhite"
                android:layout_above="@+id/tvActivityCaption3" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>



