<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.macalester.macathon.sixpack.fragments.MyChallengeFragment">

    <ScrollView
        android:id="@+id/sv_my_challenge_challenge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp"
                android:paddingRight="1dp">

                <TextView
                    android:id="@+id/tv_my_challenge_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 push-ups"
                    android:textSize="26sp"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/tv_my_challenge_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Points"
                    android:textSize="22sp"
                    android:textColor="@color/colorHotPink"
                    android:paddingLeft="5dp"
                    android:layout_below="@id/tv_my_challenge_item" />

                <CheckBox
                    android:id="@+id/cb_my_challenge_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:layout_below="@+id/tv_my_challenge_amt"/>

                <TextView
                    android:id="@+id/tv_my_challenge_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="ACCEPT"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorHotPink"
                    android:layout_alignRight="@+id/tv_my_challenge_item" />

                <TextView
                    android:id="@+id/tv_my_challenge_challenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Jim Hoppe"
                    android:textSize="22sp"
                    android:textColor="@color/colorHotPink"
                    android:paddingLeft="5dp"
                    android:layout_below="@+id/tv_my_challenge_amt"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/tv_my_challenge_decline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DECLINE"
                    android:textColor="@color/colorHotPink"
                    android:layout_alignTop="@+id/tv_my_challenge_amt"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <ImageView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/gradient_separator_black"
                android:layout_height="1dp"
                android:layout_below="@id/ivAcccountScrollView" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
