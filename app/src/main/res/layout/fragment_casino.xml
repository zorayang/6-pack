<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_casino_image"
        android:layout_height="360dp"
        android:layout_width="match_parent"
        android:src="@drawable/pasino" />

    <RelativeLayout
        android:id="@+id/casino_text"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/iv_casino_image">

        <TextView
            android:id="@+id/tv_casino_bet"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:text="I want to bet:"
            android:textColor="@color/colorHotPink"
            android:textSize="22sp" />

        <EditText
            android:hint="amount $:"
            android:id="@+id/et_casino_amt"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_casino_bet"
            android:layout_width="wrap_content"
            android:textColor="@color/colorHotPink" />

        <Button
            android:backgroundTint="@color/colorHotPink"
            android:id="@+id/btn_casino_join"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/et_casino_amt"
            android:layout_width="wrap_content"
            android:text="Join!" />
    </RelativeLayout>

</RelativeLayout>